<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.StartActivity">

    <Button
            android:text="Single link by id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/singleLink" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
    <Button
            android:text="All links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/allLinks" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/singleLink" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"/>
</android.support.constraint.ConstraintLayout>